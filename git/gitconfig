[alias]
  st = status -sb
  ci = commit
  co = checkout
  br = branch
  po = push origin -u
  pof = push origin -uf
  lo = log --graph
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  amend = commit --amend
  tinylog = log --format=oneline --abbrev-commit
  shortref = rev-parse --short HEAD
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[merge]
  ff = only
  tool = opendiff
[difftool]
  prompt = false
[branch]
  autosetupmerge = always
[help]
  format = web
  autocorrect = 1
[advice]
  statusHints = false
[web]
  browser=open
[diff]
  tool = vimdiff
[core]
  editor = vim
  excludesfile = ~/.gitignore
  pager = "less -RX"
[gist]
  private = true
[push]
  default = current
  followTags = true
[rebase]
  autostash = true
[remote "origin"]
  prune = true
[include]
  path = .gitconfig.private
[pull]
  rebase = false
[init]
  defaultBranch = main
